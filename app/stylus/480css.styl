@import 'includes/animatephone.styl'
b()
	border 3px solid red
bw()
	min-width 100%
	max-width 100%
	height 100%
dw()
	width 100%
	height auto
html
	width 100%	
	height 100%
	font 15px Alegreya

body
	height 100%
// Размеры

.container1,
.container2,
.container3,
.container4,
.container5,
footer
	bw()
	background-size cover

.header__wrapper,
.hero,
.wrapper,
.pancakes,
.breakfast__wrapper,
.sandwich,
.foot
	bw()

	
.header
	height 20%
	background rgba(1,1,1,0.3)
.header__wrapper
	dw()
	height 100%
.header__logo
	float none
	display block
	height 50%
	margin 0 auto
.header__navi
	display none
	
.header__social
	float none
	dw()
	margin 0 auto
.header__icon
	dw()
.header__icon-link
	width 30px
	height 28px
	margin 0 15px
	background-size cover
	

.hero
	height 80%
	line-height normal
.hero__wrapper
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	dw()
	line-height 5em
.hero__caption
	dw()
	line-height 1em
	font-size 52px
	letter-spacing 1px

.hero__description
	dw()
	font-size 1.3em
.hero__button
	display none
.hero__button_phone
	position absolute
	bottom 0
	left 0
	display inline-block
	width 100%
	height 50px
	text-align center
	background rgba(1,1,1,0.3)
	font-size 14px
	font-weight 900
	line-height 50px
.hero__button_phone:link,
.hero__button_phone:visited
	color #fff	

// container2
.container2
	height auto
	padding-bottom 5%
	margin-bottom 15%
.wrapper
	position relative
	width 100%
	height auto
	line-height normal
.art
	dw()
	line-height normal
.art__wrap
	dw()
	padding 5% 0 0
	margin-bottom 15%
.art__caption
	dw()
	margin 5% 0
	font-size 30px
.art__we
	font-size 16px
.art__text
	width 90%
	margin 10% 0
	font-size 16px
	text-align justify
.art__chef
	margin-bottom 3%
	font-size 22px
.art__photo
	dw()
	margin 10% 0 12%
	line-height normal
.art__name
	font-size 22px
	width 50%
	height 50%
	border-radius 10px
	background rgba(200,200,200,0.2)
	box-shadow 0 0 30px 1px #aaa
.art__picture
	float left
	width 95px
	height 95px
	margin 0 3%
.art__quote
	position relative
	dw()
	line-height normal
.art__quote span
	display block
	font-size 50px
.art__cite
	width 80%
	height auto
	font-size 24px
.left
	position absolute
	top -8px
	left 10px
	margin 0
	line-height normal
.right
	position absolute
	bottom -13px
	right 10px
	margin 0
	line-height normal


.tastes
	position relative
	width 95%
	height 252px
	overflow hidden
	line-height 0
	opacity 0
	transition opacity .5s cubic-bezier(1,.07,.32,.27)
.tastes__sogood
	width 100%
	height 100%
	text-align left
.tastes__sogood:after 
	display none
.tastes__photo
	position absolute
	top 0
	left 0
	width 100%
	transition transform .5s ease-out
.tastes__photo:after
	width 92%
	height 92%
	
	
.container3
	position relative
	min-width 100%
	max-width 100%
	height 100%
	// background url(../img/widget/4.jpg) no-repeat 50% 70%
	background none
	background-size 450%
.pancakes
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	height 100%
	min-width 100%
	max-width 100%
	line-height 1em
.pancakes__wrapper
	bw()
.pancakes__widget
	bw()
	position static
	box-shadow none
	background-image none
.pancakes__description
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	dw()
	padding 10% 0 0
	text-align center
	box-shadow 3px -5px 43px -9px #bbbbbb
	background-size cover
.pancakes__description:before
	display none
.pancakes__name
	font-size 30px
	letter-spacing 1px
	text-align center
.pancakes__subtitle
	font-size 16px
	letter-spacing 1px
	margin-bottom 10%
.pancakes__text 
	display inline-block
	width 90%
	line-height 1.5em
	text-align justify
	font-size 16px
.pancakes__rating
	float right
	margin 15% 3%
.pancakes__star
	width 18px
	height 18px
	background-size cover
.pancakes__slider
	clear right
	width 50%
	height 130px
	margin 15% 5%
	overflow hidden
	border-radius 30%
.pancakes__slider:before,
.pancakes__slider:after
	display none
.pancakes__icon
	width 100%
	height 100%
.pancakes__slider img:nth-child(2)
	margin 0
.pancakes__minutes
	top 52%
	right 70%
	width 30%
	height 13%
	font-size 12px
	letter-spacing 1px
	box-shadow none
	background none 
.pancakes__ready
	line-height 1em
.pancakes__digits
	font-size 50px
	line-height 1em
	
.container4
	bw()
.breakfast__price
	bw()
.breakfast__inline
	bw()
.breakfast__caption
	font-size 35px
	letter-spacing 2px
.breakfast__subtitle
	margin-bottom 10%
.breakfast__one
	font-size 16px
.breakfast__onetitle
	font-size 10px
.breakfast__onemoney
	margin-bottom 10%
.breakfast__two
	font-size 16px
.breakfast__twotitle
	font-size 10px
.breakfast__three
	font-size 16px


.book 
	display none




// ВРЕМЕННЫЙ ДИСПЛЕЙ	
.backery,	
.border,
.container5,
footer
	display none